<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgview"
    tools:context=".settings">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="25dp"
        android:id="@+id/settings"
        android:orientation="horizontal"
        android:background="#031A4E"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/imagesettings"
        android:layout_below="@+id/settings"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/logo3"
            />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imagesettings"
        android:layout_marginEnd="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/card2"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/general"
                android:padding="10dp"
                android:gravity="center"
                android:drawableStart="@drawable/contrast"
                android:textColor="@color/white"
                android:text="Theme"
                android:textSize="18sp"/>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card2"
        android:layout_marginEnd="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/card3"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/general1"
                android:padding="10dp"
                android:gravity="center"
                android:drawableStart="@drawable/notification"
                android:textColor="@color/white"

                android:text="Notifications"
                android:textSize="18sp"/>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card3"
        android:layout_marginEnd="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/card4"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/general2"
                android:padding="10dp"
                android:gravity="center"
                android:drawableStart="@drawable/baseline_share_24"
                android:textColor="@color/white"
                android:text="Share App"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card4"
        android:layout_marginEnd="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/card5"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/general3"
                android:padding="10dp"
                android:gravity="center"
                android:drawableStart="@drawable/rating"
                android:textColor="@color/white"
                android:text="Rate Us"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card5"
        android:layout_marginEnd="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/card6"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/general4"
                android:padding="10dp"
                android:gravity="center"
                android:drawableStart="@drawable/baseline_person_24"
                android:textColor="@color/white"
                android:text="About Us"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card6"
        android:layout_marginEnd="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/card7"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/general5"
                android:padding="10dp"
                android:gravity="center"
                android:drawableStart="@drawable/red_eye_24"
                android:textColor="@color/white"
                android:text="Privacy Policy"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card7"
        android:layout_marginEnd="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/card8"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/general6"
                android:padding="10dp"
                android:gravity="center"
                android:drawableStart="@drawable/baseline_logout_24"
                android:textColor="@color/white"
                android:text="Logout"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/version"
    android:gravity="center"
    android:layout_centerInParent="true"
    android:layout_below="@+id/card8"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version 1.1.23"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20sp"
        />
</LinearLayout>
</RelativeLayout>